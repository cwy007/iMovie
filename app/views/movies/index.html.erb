<div class="col-md-12">
  <div class="movie">
    <%=  link_to("Add a Movie", new_movie_path, class: "btn btn-primary pull-right") %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th>Title</th>
        <th>Description</th>
        <th>Creator</th>
      </tr>
    </thead>
    <tbody>
      <%= render :partial => "movie_item", :collection => @movies, :as => :movie %>

    </tbody>
  </table>
  <div class="text-center">
    <%= will_paginate @movies %>
  </div>
</div>
